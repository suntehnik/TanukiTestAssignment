<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/WebimageHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|top"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/Webimage"
            android:layout_width="@dimen/WebimageWidth"
            android:layout_height="@dimen/WebImageHeight"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:src="@drawable/webimage_content_picture" />

        <TextView
            android:id="@+id/WebimageTitile"
            style="@style/TitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/title" />

        <TextView
            android:id="@+id/WebimageAuthor"
            style="@style/AuthorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/author" />

    </LinearLayout>

</FrameLayout>
